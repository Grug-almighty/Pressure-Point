{
  "name": "brotato-lite",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "description": "Brotato-lite desktop build",
  "author": "Grug-almighty",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.grugalmighty.brotatolite",
    "productName": "Brotato-Lite",
    "files": [
      "**/*",
      "!wasm/BrotatoSystems/**",
      "!wasm/dist/_framework/*.br",
      "!wasm/dist/_framework/*.gz",
      "!**/.git/**"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png",
      "category": "Game"
    },
    "publish": {
      "provider": "github",
      "owner": "Grug-almighty",
      "repo": "Pressure-Point"
    }
  }
}
